{
  "name": "@tamaproject360/opencode-telegram-bot",
  "version": "0.4.0",
  "description": "Telegram bot client for OpenCode to run and monitor coding tasks from chat.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "opencode-telegram": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
    "release:prepare": "node scripts/release-prepare.mjs",
    "release:rc": "node scripts/release-prepare.mjs rc",
    "release:notes:preview": "node scripts/release-notes-preview.mjs",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tamaproject360/opencode-telegram-bot.git"
  },
  "keywords": [
    "opencode",
    "telegram",
    "telegram-bot",
    "grammy",
    "developer-tools",
    "cli"
  ],
  "author": "tamaproject360",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tamaproject360/opencode-telegram-bot/issues"
  },
  "homepage": "https://github.com/tamaproject360/opencode-telegram-bot#readme",
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.21",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.2",
    "https-proxy-agent": "^7.0.6",
    "socks-proxy-agent": "^8.0.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --max-warnings=0",
      "prettier --write"
    ]
  }
}
